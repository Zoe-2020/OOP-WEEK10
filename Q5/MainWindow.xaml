        <RadioButton x:Name="smallerRadio" Content="smaller" HorizontalAlignment="Left" Margin="390,161,0,0" VerticalAlignment="Top"/>
        <Button x:Name="GuessBtn" Content="Guess" HorizontalAlignment="Left" Margin="263,238,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <TextBlock x:Name="SecondNum" HorizontalAlignment="Left" Margin="310,322,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
