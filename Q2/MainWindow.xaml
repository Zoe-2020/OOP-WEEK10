<Window x:Class="Q2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="56" Margin="380,73,0,0" TextWrapping="Wrap" Text="Enter Name Here" VerticalAlignment="Top" Width="152" RenderTransformOrigin="0.5,0.5" GotFocus="txtInput_GotFocus">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.223"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="btn" Content="click here!" HorizontalAlignment="Left" Margin="387,169,0,0" VerticalAlignment="Top" Width="137" Height="39" GotFocus="btn_GotFocus"/>

    </Grid>
</Window>
